# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# Database
DATABASE_URL=sqlite:///afharchive.db

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_CONTENT_LENGTH=5368709120
ALLOWED_EXTENSIONS=zip,apk,img,tar,gz,xz,7z,rar,md5

# Admin Configuration
ADMIN_EMAILS=admin@example.com,another.admin@example.com

# Rate Limiting
# Downloads are processed asynchronously to handle multiple concurrent users
# At 10MB/s with 4 concurrent downloads, each gets ~2.5MB/s  
# Large files are downloaded in background threads to prevent worker timeouts
DOWNLOAD_SPEED_LIMIT=10485760

# Resend Configuration
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=your-email@example.com
